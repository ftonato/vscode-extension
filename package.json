{
  "name": "xata",
  "displayName": "xata-vscode-extension",
  "description": "Managed your xatabase from VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:xata.login",
    "onCommand:xata.logout",
    "onCommand:xata.refresh",
    "onView:xataExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Xata",
      "properties": {
        "xata.baseUrl": {
          "type": "string",
          "default": "https://xata.sh",
          "description": "Xata base url"
        },
        "xata.hideBranchLevel": {
          "type": "boolean",
          "default": "true",
          "description": "Hide branch level when a database have only one branch"
        }
      }
    },
    "commands": [
      {
        "command": "xata.login",
        "title": "Xata: Login"
      },
      {
        "command": "xata.logout",
        "title": "Xata: Logout"
      },
      {
        "command": "xata.refresh",
        "title": "Xata: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "xata.addColumn",
        "title": "Add column",
        "icon": "$(add)"
      },
      {
        "command": "xata.addWorkspace",
        "title": "Add workspace",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xata",
          "title": "Xata",
          "icon": "media/xata-icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "xataExplorer",
        "contents": "Welcome to xata!\n[Get started](command:xata.login)"
      }
    ],
    "views": {
      "xata": [
        {
          "id": "xataExplorer",
          "name": "Xata",
          "icon": "media/xata-icon.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "xata.addColumn",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "xata.refresh",
          "when": "view == xataExplorer",
          "group": "navigation"
        },
        {
          "command": "xata.addWorkspace",
          "when": "view == xataExplorer"
        }
      ],
      "view/item/context": [
        {
          "command": "xata.addColumn",
          "when": "view == xataExplorer && viewItem == table",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "gen": "openapi-codegen gen xata"
  },
  "devDependencies": {
    "@openapi-codegen/cli": "^1.5.0",
    "@openapi-codegen/typescript": "^3.0.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "typescript": "^4.5.5",
    "vitest": "^0.9.3"
  },
  "dependencies": {
    "undici": "^5.0.0"
  }
}
