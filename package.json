{
  "name": "xata",
  "displayName": "xata-vscode-extension",
  "description": "Managed your xatabase from VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:xata.login",
    "onCommand:xata.logout",
    "onCommand:xata.refresh",
    "onView:xataExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Xata",
      "properties": {
        "xata.baseUrl": {
          "type": "string",
          "default": "https://xata.sh",
          "description": "Xata base url"
        },
        "xata.hideBranchLevel": {
          "type": "boolean",
          "default": "true",
          "description": "Hide branch level when a database have only one branch"
        },
        "xata.enableDatabaseColor": {
          "type": "boolean",
          "default": "true",
          "description": "Use database color for the icon"
        }
      }
    },
    "colors": [
      {
        "id": "xata.gray",
        "description": "Xata gray",
        "defaults": {
          "dark": "#CBD5E0",
          "highContrast": "#E2E8F0",
          "highContrastLight": "#4A5568",
          "light": "#A0AEC0"
        }
      },
      {
        "id": "xata.orange",
        "description": "Xata orange",
        "defaults": {
          "dark": "#F6AD55",
          "highContrast": "#FBD38D",
          "highContrastLight": "#C05621",
          "light": "#ED8936"
        }
      },
      {
        "id": "xata.green",
        "description": "Xata green",
        "defaults": {
          "dark": "#68D391",
          "highContrast": "#9AE6B4",
          "highContrastLight": "#2F855A",
          "light": "#48BB78"
        }
      },
      {
        "id": "xata.blue",
        "description": "Xata blue",
        "defaults": {
          "dark": "#63b3ed",
          "highContrast": "#90cdf4",
          "highContrastLight": "#2b6cb0",
          "light": "#4299e1"
        }
      },
      {
        "id": "xata.cyan",
        "description": "Xata cyan",
        "defaults": {
          "dark": "#76E4F7",
          "highContrast": "#9DECF9",
          "highContrastLight": "#00A3C4",
          "light": "#0BC5EA"
        }
      },
      {
        "id": "xata.purple",
        "description": "Xata purple",
        "defaults": {
          "dark": "#B794F4",
          "highContrast": "#D6BCFA",
          "highContrastLight": "#6B46C1",
          "light": "#9F7AEA"
        }
      },
      {
        "id": "xata.pink",
        "description": "Xata pink",
        "defaults": {
          "dark": "#F687B3",
          "highContrast": "#FBB6CE",
          "highContrastLight": "#B83280",
          "light": "#ED64A6"
        }
      }
    ],
    "commands": [
      {
        "command": "xata.login",
        "title": "Xata: Login"
      },
      {
        "command": "xata.logout",
        "title": "Xata: Logout"
      },
      {
        "command": "xata.refresh",
        "title": "Xata: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "xata.addColumn",
        "title": "Add column",
        "icon": "$(add)"
      },
      {
        "command": "xata.addWorkspace",
        "title": "Xata: Add workspace",
        "icon": "$(add)"
      },
      {
        "command": "xata.deleteWorkspace",
        "title": "Delete workspace",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xata",
          "title": "Xata",
          "icon": "media/xata-icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "xataExplorer",
        "contents": "Welcome to xata!\n[Get started](command:xata.login)"
      }
    ],
    "views": {
      "xata": [
        {
          "id": "xataExplorer",
          "name": "Xata",
          "icon": "media/xata-icon.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "xata.addColumn",
          "when": "false"
        },
        {
          "command": "xata.deleteWorkspace",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "xata.refresh",
          "when": "view == xataExplorer",
          "group": "navigation"
        },
        {
          "command": "xata.addWorkspace",
          "when": "view == xataExplorer"
        }
      ],
      "view/item/context": [
        {
          "command": "xata.addColumn",
          "when": "view == xataExplorer && viewItem == table",
          "group": "inline"
        },
        {
          "command": "xata.deleteWorkspace",
          "when": "view == xataExplorer && viewItem == workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "gen": "openapi-codegen gen xata"
  },
  "devDependencies": {
    "@openapi-codegen/cli": "^1.5.0",
    "@openapi-codegen/typescript": "^3.0.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "typescript": "^4.5.5",
    "vitest": "^0.9.3"
  },
  "dependencies": {
    "undici": "^5.0.0"
  }
}
